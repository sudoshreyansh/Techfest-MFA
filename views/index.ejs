<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/logo.png" type="image/png">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="container">
        <main>
            <div class="header">
                <div class="logo">
                    <img src="/images/logo.png" alt="">
                </div>
            </div>
            <div class="content">
                <div class="content-inner">
                    <h2 class="auth-title"><%= title %></h2>
                    <div class="auth-description"><%- description %></div>
                    <% if ( script === 'login-with-cta' ) { %>
                        <button class="button button-primary" id="authorize">Authorize</button>
                        <button class="button button-secondary">Cancel</button>
                    <% } %>
                </div>
            </div>
        </main>
    </div>
    <% if ( script === 'login-with-cta' || script === 'login' ) { %>
        <script>
            let button = document.getElementById('authorize');
            if ( button ) {
                button.addEventListener('click', login);
            } else {
                login();
            }

            async function login() {
                let token = await (await fetch('/authorize', {
                    method: 'POST'
                })).text();
                let response = (await fetch('<%= successUrl %>', {
                    method: 'POST',
                    body: new URLSearchParams({
                        token: token
                    })
                }));
                console.log(token);
                window.location = '<%= successUrl %>';
            }
        </script>
    <% } %>
  </body>
</html>
